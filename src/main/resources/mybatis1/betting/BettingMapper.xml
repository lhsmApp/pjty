<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BettingMapper">
	
	<!--表名 -->
	<sql id="tableName">
		tb_betting_info
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		LICENSE_NO,	
		USER_NAME,	
		MOBILE_TEL,	
		OFFICE_TEL,	
		FAX,	
		BELONG_AREA,	
		BETT_ADDR,	
		BETT_AREA,	
		BETT_INTR,	
		GEOG_COOR,	
		REMARK,	
		ID_CODE
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{LICENSE_NO},	
		#{USER_NAME},	
		#{MOBILE_TEL},	
		#{OFFICE_TEL},	
		#{FAX},	
		#{BELONG_AREA},	
		#{BETT_ADDR},	
		#{BETT_AREA},	
		#{BETT_INTR},	
		#{GEOG_COOR},	
		#{REMARK},	
		#{ID_CODE}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID_CODE = #{ID_CODE}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			LICENSE_NO = #{LICENSE_NO},
			USER_NAME = #{USER_NAME},
			MOBILE_TEL = #{MOBILE_TEL},
			OFFICE_TEL = #{OFFICE_TEL},
			FAX = #{FAX},
			BELONG_AREA = #{BELONG_AREA},
			BETT_ADDR = #{BETT_ADDR},
			BETT_AREA = #{BETT_AREA},
			BETT_INTR = #{BETT_INTR},
			GEOG_COOR = #{GEOG_COOR},
			REMARK = #{REMARK}
		where 
		ID_CODE = #{ID_CODE}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID_CODE = #{ID_CODE}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 列表(全部)根据条件搜索 -->
	<select id="listAllByCondition" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		<where >
			<if test="keywords!= null and keywords != ''"><!-- 关键词检索 -->
			and
				(
					bett_addr LIKE CONCAT(CONCAT('%', #{keywords}),'%')
				)
				
			</if>
			<if test="BELONG_AREA != null and BELONG_AREA != ''"><!-- 所在区域 -->
				and BELONG_AREA=#{BELONG_AREA} 
			</if>
			<if test="ID_CODE != null and ID_CODE != ''"><!-- 投注站编码 -->
				and ID_CODE=#{ID_CODE} 
			</if>
		</where>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID_CODE in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>